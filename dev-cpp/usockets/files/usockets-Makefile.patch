@@ -1,3 +1,14 @@
+DESTDIR ?=
+
+prefix ?= "${DESTDIR}/usr/local"
+exec_prefix	?=	"$(prefix)"
+libdir ?=	"$(exec_prefix)/lib"
+includedir?=	"$(exec_prefix)/include"
+
+VERSION = 0.3.5
+LIBTARGET = libusockets.so
+
+
 # WITH_OPENSSL=1 enables OpenSSL 1.1+ support
 ifeq ($(WITH_OPENSSL),1)
 	override CFLAGS += -DLIBUS_USE_OPENSSL
@@ -35,8 +46,23 @@ endif
 override CFLAGS += -std=c11 -Isrc
 override LDFLAGS += uSockets.a
 
-# By default we build the uSockets.a static library
+# By default we build the libusockets.so shared library
 default:
+	rm -f *.o
+	$(CC) $(CFLAGS) $(CPPFLAGS) -fpic -c src/*.c src/eventing/*.c src/crypto/*.c
+	$(CC) -shared -Wl,-soname,libusockets.so -o $(LIBTARGET) *.o
+
+install: default
+	# install the library first, while making sure that the symlink is updated
+	install -m 755 $(LIBTARGET) "$(libdir)/$(LIBTARGET).$(VERSION)"
+	@ln -snf "$(libdir)/$(LIBRGET)" "$(libdir)/libusockets.so"
+	# we also install all the header files
+	install  src/*.h "$(includedir)/"
+	install -m 644 src/internal/*.h "$(includedir)/internal/"
+	install -m 644 src/internal/eventing/*.h "$(includedir)/internal/eventing/"
+	install -m 644 src/internal/networking/*.h "$(includedir)/internal/networking/"
+
+static:
 	rm -f *.o
 	$(CC) $(CFLAGS) -flto -O3 -c src/*.c src/eventing/*.c src/crypto/*.c
 	$(AR) rvs uSockets.a *.o
